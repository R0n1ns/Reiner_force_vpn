        <style>
            /* Sidebar Style */
            .sidebar {
                width: 70px;
                height: 100vh; /* Full page height */
                transition: width 0.3s;
            }
            .sidebar.expanded {
                width: 200px;
            }
            .sidebar .nav-link {
                color: #ffffff;
                padding: 1rem;
            }
            .sidebar .nav-link i {
                font-size: 1.5rem;
            }
            .sidebar.expanded .nav-text {
                display: inline;
            }

            /* Icon Custom Styles */
